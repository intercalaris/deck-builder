<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokémon TCG Deck Builder</title>
    <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-gray-100">
    <nav class="bg-white shadow-lg mb-8">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <a href="/" class="text-xl font-bold">Pokémon TCG Deck Builder</a>
                <div class="flex items-center space-x-4">
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="text-gray-700" id="close-session">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

<div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">My Decks</h1>
        <a href="/createDeck" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
            New Deck
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% decks.forEach(function(deck) { %>
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
                <div class="p-4">
                    <div class="flex justify-between items-start">
                        <h2 class="text-xl font-semibold"><%= deck.name %></h2>
                        <form action="/decks/<%= deck._id %>?_method=DELETE" method="POST" class="inline">
                            <button type="submit" class="text-red-500 hover:text-red-700">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                            </button>
                        </form>
                    </div>
                    <p class="text-gray-600 mt-2"><%= deck.cards.length %> cards</p>
                    <a href="/decks/<%= deck._id %>/edit" class="block mt-4 text-center bg-gray-100 text-gray-700 px-4 py-2 rounded hover:bg-gray-200">
                        Edit Deck
                    </a>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<footer class="bg-white mt-8 py-4">
    <div class="max-w-6xl mx-auto px-4 text-center text-gray-600">
        &copy; Yonatan Aviv 2024 Pokémon TCG Deck Builder
    </div>
</footer>
<script src="/js/deckDeletion.js"></script>
</body>
</html>